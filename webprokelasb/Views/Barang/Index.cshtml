@model List<webprokelasb.Entitas.Barang>
<h2>Barang</h2>
<h2>    </h2>
<a href="/Barang/Tambah">Tambah</a>
<table>
    <tr style="background-color:darkgoldenrod">
        <th>NO.</th>
        <th>Kode Barang</th>
        <th>Nama Barang</th>
        <th>Harga</th>
        <th>Stok</th>
        <th>Aksi</th>
    </tr>
    @if (Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            <tr style="background-color:darkgray">
                <td>@(i+1)</td>
                <td><a href="/Barang/Detil?KodeBarang=@Model[i].KodeBarang">@Model[i].KodeBarang</a></td>
                <td>@Model[i].NamaBarang</td>
                <td>@Model[i].harga</td>
                <td>@Model[i].Stok</td>
                <td><a href="/Barang/ubah?KodeBarang=@Model[i].KodeBarang">Ubah</a></td>
                <td><a href="/Barang/Hapus?KodeBarang=@Model[i].KodeBarang">Hapus</a></td>

            </tr>
        }
    }

</table>



